      <div class='row'>
        <div class='col-md-3 mt-2'>
          <div class='row'>
            <div class='col-md-12'>
              <div class='min-box'>
                <header >
                  <p>View by categories</p>
                </header>
                <content>
                  <ul class='list-group list-group-flush'>
                    <li class='list-group-item'>Physical</li>
                    <li class='list-group-item'>Mental</li>
                    <li class='list-group-item'>Other</li>
                  </ul>
                </content>
              </div>
            </div>
          </div>
        </div>
        <div class='col-md-5 mt-2'>
          <div class='row'>
            {{#each challenge}}
              <div class='col-md-12 challengeBox' >
                <div
                  class='text-center d-flex flex-column justify-content-evenly'
                  style='background-color: #fff; height: 300px;'
                >
                  <h2>{{name}}</h2>
                  <p>Worth {{score}} points</p>
                  <p>Created By {{user.name}}</p>
                </div>
                <div
                  class='row post_link'
                  style='padding: 15px 0; color: #fff; font-size: 17px; text-align: center;'
                >
                  <div class='col-md-4' style=''>
                    <a href=''>+20</a>
                    Accepted
                  </div>
                  <div class='col-md-4'><a href=''>+5</a> Completed</div>
                  <div class='col-md-4'><a href=''>+2</a> Watch</div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
    <div class='col-md-4 mt-2'>
      <div class='row'>
        <div class='col-md-12'>
          <div class='min-box'>
            <header>
              <p>Pending challenges</p>
            </header>
            <content>
              <ul class='list-group list-group-flush'>
                <li
                  class='list-group-item d-flex justify-content-between align-items-start'
                >
                  <div class='ms-2 me-auto'>
                    <div class='fw-bold'>Subheading</div>
                    Content for list item
                  </div>
                  <span class='badge rounded-pill'>
                    <button
                      class='btn btn-sm btn-primary'
                      data-bs-toggle='modal'
                      data-bs-target='#challengecompleted'
                    >Completed</button>
                  </span>
                </li>
              </ul>
            </content>
          </div>
        </div>
        <div class='container-fluid'>
          <div class='container-fluid min-box bg-light p-4'>
            <div class='row d-flex flex-wrap flex-row justify-content-evenly align-items-center'>
              <div class='col-md-4 text-center bg-dark'>
                  {{#if data.image}}
                    <img src={{{data.image}}} class='img-fluid' />
                  {{/if}}
                </div>
                <div class="col-md-8 text-center">
                  <p class="fs-2">{{data.name}}</p>
                </div>
              </div>
              <div class='container-fluid mx-auto mt-3'>
                <div class='d-flex flex-wrap flex-row align-items-center justify-content-evenly'>
                  <div class='px-3' style='text-align: center'>
                    Points
                    <p style='font-weight: 700;'>{{data.score}}</p>
                  </div>
                  <div class='px-3' style='text-align: center'>
                    Created
                    <p style='font-weight: 700;'>{{numCreated}}</p>
                  </div>
                  <div class='px-3' style='text-align: center'>
                    Completed
                    <p style='font-weight: 700;'>2</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
  <!-- Challenge Completed Modal -->
  <div
    class='modal fade'
    id='challengecompleted'
    data-bs-backdrop='static'
    data-bs-keyboard='false'
    tabindex='-1'
    aria-labelledby='staticBackdropLabel'
    aria-hidden='true'
  >
    <div class='modal-dialog'>
      <div class='modal-content'>
        <div class='modal-header'>
          <h5 class='modal-title' id='staticBackdropLabel'>Challenge title</h5>
          <button
            type='button'
            class='btn-close'
            data-bs-dismiss='modal'
            aria-label='Close'
          ></button>
        </div>
        <div class='modal-body'>
          ...
        </div>
        <div class='modal-footer'>
          <button
            type='button'
            class='btn btn-secondary'
            data-bs-dismiss='modal'
          >Cancel</button>
          <button type='button' class='btn btn-primary'>Post</button>
        </div>
      </div>
    </div>
  </div>
  <!-- Post Challenge Modal -->
  <div
    class='modal fade'
    id='createnewchallenge'
    data-bs-backdrop='static'
    data-bs-keyboard='false'
    tabindex='-1'
    aria-labelledby='staticBackdropLabel'
    aria-hidden='true'
  >
    <div class='modal-dialog'>
      <div class='modal-content'>
        <div class='modal-header'>
          <h5 class='modal-title' id='staticBackdropLabel'>Create New Challenge</h5>
          <button
            type='button'
            class='btn-close'
            data-bs-dismiss='modal'
            aria-label='Close'
          ></button>
        </div>
        <div class='modal-body'>
          <!-- <form action="https://plus.dropzone.dev/_p/61cb8b7ac052a539989595a8"
                    method="post"
                    enctype="multipart/form-data">
                <input type="text" name="name" />
                <input type="text" name="email" />
                <input type="file" name="bannerImage" />
                <button type="submit">Send</button>
              </form> -->
          <form>
            <div class='mb-3'>
              <label for='challengeName' class='form-label'>Name</label>
              <input
                type='text'
                class='form-control'
                id='challengeName'
                aria-describedby='emailHelp'
              />
            </div>
            <div class='mb-3'>
              <label for='challengeName' class='form-label'>Category</label>
              <select
                name='challenge_category'
                class='form-select'
                id='categoryInput'
              >
                <option value=''>Select a category</option>
                <option value='physical'>Physical</option>
                <option value='Mental'>Mental</option>
                <option value='Other'>Other</option>
              </select>
            </div>
            <div class='mb-3'>
              <label for='challengeScore' class='form-label'>Point Value (0 -
                20pts)</label>
              <input
                type='number'
                min='0'
                max='20'
                class='form-control'
                id='challengeScore'
                aria-describedby='emailHelp'
              />
            </div>
            <div class='mb-3'>
              <label for='challengeName' class='form-label'>Attach video</label>
              <div
                style='margin: 0px 0 0 0; border: 1px solid #e1e1e1; background: #e1e1e1; border-radius: 3px; padding: 20px'
              >
                <div class='my-dropzone'></div>
              </div>
            </div>
          </form>
        </div>
        <div class='modal-footer'>
          <button
            type='button'
            class='btn btn-secondary'
            data-bs-dismiss='modal'
          >Cancel</button>
          <button
            type='button'
            id='postChallenge'
            class='btn btn-primary'
          >Post</button>
        </div>
      </div>
    </div>
  </div>
</div>
