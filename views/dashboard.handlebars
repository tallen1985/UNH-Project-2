<body>
  <div class='m-5 p-3 bg-white'>
    <div
      class='container-fluid d-flex flex-wrap justify-content-evenly align-items-center'
    >
      {{#if data.image}}
        <img id='userImage' src={{{data.image}}} class='img-fluid' />
      {{else}}
        <img id='userImage' src='/images/noImage.jpeg' class='img-fluid' />
      {{/if}}
      <h1>Name: {{data.name}}</h1>
    </div>
    <div class='text-center p-3'>
      <button id='upload_widget' class='cloudinary-button'>Upload New Image</button>
    </div>

  </div>
  <div class='bg-white text-dark text-center mx-5 p-3'>
    <div class='container'>
      <h2>Accepted Challenges</h2>
      {{#each accepted}}
        {{#unless completed}}
          <li
            class='list-group-item d-flex justify-content-between align-items-start'
          >
            <div class='ms-2 me-auto'>
              <div class='''>
                {{challenge.name}}
              </div>
            </div>
          </li>
        {{/unless}}
      {{/each}}
    </div>

    <div class='container mb-3'>
      <h2>Created Challenges</h2>
      {{#if userCreated}}
        {{#each userCreated}}
          <li
            class='list-group-item d-flex justify-content-between align-items-start mb-3 ms-2 me-auto'
          >{{name}}</li>
        {{/each}}
      {{else}}
        <li>No Created challenges</li>
      {{/if}}
    </div>
  </div>
</body>
<script
  src='https://upload-widget.cloudinary.com/global/all.js'
  type='text/javascript'
></script>
<script src='/js/logout.js'></script>
<script src='/js/newChallenge.js'></script>
<script src='/js/userImage.js'></script>
<script src='https://unpkg.com/dropzone@5/dist/min/dropzone.min.js'></script>
<link
  rel='stylesheet'
  href='https://unpkg.com/dropzone@5/dist/min/dropzone.min.css'
  type='text/css'
/>